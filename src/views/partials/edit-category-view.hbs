{{> menu active="categories"}}

<section class="section">
  <div class="container">
    <h1 class="title">{{title}}</h1>
    <h2 class="subtitle">Edit category details</h2>

    <form action="/categories/edit/{{category._id}}" method="POST">
      <div class="field">
        <label class="label">Category Name</label>
        <div class="control">
          <input class="input" type="text" placeholder="Enter category name" name="name" value="{{category.name}}" required>
        </div>
      </div>

      <div class="field">
        <label class="label">Location</label>
        <div class="control">
          <input class="input" type="text" placeholder="Enter location" name="location" value="{{category.location}}" required>
        </div>
      </div>

      <div class="field">
        <label class="label">Description</label>
        <div class="control">
          <textarea class="textarea" placeholder="Enter description" name="description">{{category.description}}</textarea>
        </div>
      </div>

      <div class="field is-grouped">
        <div class="control">
          <button class="button is-link">Update Category</button>
        </div>
        <div class="control">
          <a href="/categories" class="button is-light">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</section>
